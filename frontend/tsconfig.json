{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": false,
        "noEmitOnError": true,
        "lib": ["ES5", "ES2015", "ES2017", "DOM"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
